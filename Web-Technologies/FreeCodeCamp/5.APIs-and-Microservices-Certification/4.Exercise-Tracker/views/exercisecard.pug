div(class="col s12 m3")
  div(class="card")
    div(class="card-image")
      img(src="./img/walking.png")
      span(class="card-title") Create a New User
      a(class="btn-floating halfway-fab waves-effect waves-light red")
        i(class="material-icons") add

    div(class="card-content")
      p POST /api/exercise/new-user
        form(action="/api/exercise/new-user" method="post")
          div(class="row")
            div(class="input-field col s12")
              input(placeholder="username" name='username' id="username" type="text" class="validate")
          button(class="btn waves-effect waves-light" type="submit" name="action") Submit
            i(class="material-icons right") send      
