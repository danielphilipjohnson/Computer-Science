.modal.fade#deletePinModal(tabindex="-1" role="dialog" aria-labelledby="deletePinModal" aria-hidden="true")
    .modal-dialog(role="document")
        .modal-content
            .modal-header
                h5(class="modal-title" id="editpin") Delete Pin
                button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") &times; 
            form#deletePinForm(method="POST", data-id="")
                .modal-body     
                    h3 Are you sure you want to delete this pin
                .modal-footer
                    button(type="button" class="btn btn-secondary" data-dismiss="modal") Close
                    button#deletePin(type="button" class="btn btn-secondary" ) Delete